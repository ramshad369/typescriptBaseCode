  "description": "Salesc2-v2-department-service",
  "main": "index.js",
  "scripts": {
    "dev": "npx nodemon",
    "build": "tsc",
    "removebuild": "rimraf ./dist",
    "start": "npm run build && cross-env && node dist/index.js",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register --spec ./src/tests/**/*.test.ts --timeout 150000 --exit",
    "reportCoverage": "cross-env NODE_ENV=test mocha -r ts-node/register --spec ./src/tests/**/*.test.ts --timeout 150000 --exit --reporter mochawesome --reporter-options enableCode=false,reportDir=dist/views/reportCoverage,reportFilename=index",
    "codeCoverage": "nyc --nycrc-path=./src/core/code-coverage.json npm run test",
    "coverage": "nyc --nycrc-path=./src/core/code-coverage.json npm run reportCoverage",
    "unitTestsAndBuild": "npm run removebuild && npm run coverage && npm run start",
    "lint": "eslint ./",
    "lint:fix": "npm run lint -- --fix"
  },
